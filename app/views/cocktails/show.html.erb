<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%=   cl_image_tag(@cocktail.photo, :width=>500, :crop=>"scale") %>
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <ul>
        <% @cocktail.doses.each do |dose|%>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to '(X)', dose, method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= render "./doses/form" %>
    </div>
  </div>
   <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= link_to 'Delete', @cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
    </div>
  </div>
</div>
