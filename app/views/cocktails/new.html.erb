<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Add a cocktail</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.submit "Your cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
